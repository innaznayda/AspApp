@model FoodAspApplication.ViewModels.HomeIndexViewModel

@{ 
    ViewBag.Title = "Home page";    
}

<h1>@Model.CurrentMessage</h1>
<table>
    @foreach (var rest in @Model.Restaurants) {
        <tr>
            <td>@rest.Name</td>
            <td>@rest.Id</td>

            <td>
                <a asp-action="Details" asp-route-id="@rest.Id">More...</a>
            </td>
        </tr>}
</table>
<a asp-action="Create">Add restaurant</a>

@section footer {
    @Model.CurrentMessage
}